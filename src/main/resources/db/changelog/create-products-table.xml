<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-products-table" author="vikasmishra">
        <createTable tableName="products">
            <column name="id" type="serial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(80)"/>
            <column name="description" type="varchar(150)"/>
            <column name="type" type="varchar(80)"/>
            <column name="serialnumber" type="varchar(80)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="addedtime" type="datetime"/>
            <column name="addedBy" type="varchar(80)"/>
        </createTable>

        <createIndex indexName="products_id_idx" tableName="products">
            <column name="id" type="serial"/>
        </createIndex>
        <createIndex indexName="products_name_idx" tableName="products">
            <column name="name" type="varchar(80)"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="products" indexName="products_id_idx"/>
            <dropIndex tableName="products" indexName="products_name_idx"/>
            <dropTable tableName="products"/>
        </rollback>
    </changeSet>
</databaseChangeLog>