<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-productstatus-table" author="vikasmishra">

        <createTable tableName="productstatus">
            <column name="id" type="serial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="productid" type="serial">
                <constraints nullable="false"/>
            </column>
           <column name="status" type="varchar(60)"/>
        <!--   <column name="trackingid" type="varchar(60)"/>-->
           <column name="location" type="varchar(60)"/>
           <column name="comment" type="varchar(60)"/>
           <column name="lastupdatedtime" type="varchar(60)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="productstatus" baseColumnNames="productid" constraintName="fk_productstatsu_productid"
                                 referencedTableName="products"
                                 referencedColumnNames="id"/>

        <rollback>
            <dropAllForeignKeyConstraints baseTableName="productstatus"/>
            <dropTable tableName="productstatus"/>
        </rollback>
    </changeSet>

</databaseChangeLog>