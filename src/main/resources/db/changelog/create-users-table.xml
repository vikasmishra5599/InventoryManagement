<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-users-table" author="vikasmishra">
        <createTable tableName="users">
            <column name="id" type="serial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>

            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="empid" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="emailid" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="contactno" type="varchar(32)"/>
            <column name="teamname" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="supervisorname" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="ismanager" type="boolean"/>
            <column name="createdtime" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="users_id_index" tableName="users">
            <column name="id" type="serial"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="users" indexName="users_id_index"/>
            <dropTable tableName="users"/>
        </rollback>
    </changeSet>
</databaseChangeLog>